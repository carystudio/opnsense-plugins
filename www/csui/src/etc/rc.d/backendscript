# load standard rc
echo "crpc_enable=\"YES\"">/etc/rc.conf.d/crpc
. /etc/rc.subr

name=backendscript
rcvar=backendscript_enable
start_precmd=""
start_cmd="${name}_start"
stop_cmd="${name}_stop"

[ -z "$backendscript_enable" ]       && backendscript_enable="YES"

backendscript_start()
{
    nohup /bin/sh /usr/local/opnsense/cs/script/watch.sh>/dev/null 2>&1 &
}

backendscript_stop()
{
	echo "no stop action"
}

load_rc_config $name
run_rc_command $1
